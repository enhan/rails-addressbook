<% provide(:title, 'Create contact') %>
<%= provide(:page_type, "contact") %>
<h1>Add a contact</h1>
<div class ="row">
	<div class="span4 offset1 well well-large">
		<%= form_for(@contact) do |f| %>
			<%=f.label :name %>
			<%=f.text_field :name %>
			
			<%=f.label :email%>
			<%=f.email_field :email%>
			<br/>
			<%=f.submit "Create contact", class:"btn btn-primary btn-large pull-right" %>
			
		<% end %>
	</div>
</div>
